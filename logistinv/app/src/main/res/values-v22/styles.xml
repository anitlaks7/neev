<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/darkred</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#000000</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/darkred</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:listViewStyle">@style/MyListView</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <!--<item name="android:listItem">@style/MyActionBarTab</item>-->

        <!--<item name="android:background">@drawable/tab_bar_background</item>-->
        <!--item name="android:actionBarTabBarStyle">@style/MyActionBarTabBar</item>-->

    </style>
    <style name="MyActionBarTab" parent="@android:style/Widget.Material.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_bar_background</item>
        <!--<item name="android:background">#FFFFFFFF</item>-->
    </style>
    <style name="MyActionBarTabBar"
        parent="@android:style/Widget.Material.Light.ActionBar.TabBar">
        <item name="android:background">@color/darkred</item>
    </style>
    <style name="MyListView" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:background">@color/light_grey</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>


    </style>
    <style name="MyButton" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:background">@drawable/mybutton</item>
    </style>
    <style name="j">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:contextClickable">true</item>-->
        <item name="android:longClickable">true</item>
    </style>

</resources>
